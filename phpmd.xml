<?xml version="1.0"?>
<ruleset name="My PHPMD Rules">
    <description>Custom rules for my PHP project</description>

    <!-- Define the directories to analyze -->
    <file>.</file>

    <!-- Specify the rules to apply -->
    <rule ref="rulesets/unusedcode.xml"/>
    <rule ref="codesize"/>
    <rule ref="naming"/>

    <!-- Exclude directories or files -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>tests/*</exclude-pattern>
</ruleset>
